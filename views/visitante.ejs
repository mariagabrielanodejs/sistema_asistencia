<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Usuario</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @keyframes bounce {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-15px);
            }
        }

        .animate-bounce {
            animation: bounce 1.5s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        .animate-pulse {
            animation: pulse 2s infinite;
        }

        .message-alert {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-out;
        }


        @keyframes drawCheck {
            to {
                stroke-dashoffset: 0;
            }
        }

        @keyframes circlePulse {
            0% {
                transform: scale(1);
                opacity: 0.25;
            }

            50% {
                transform: scale(1.05);
                opacity: 0.3;
            }

            100% {
                transform: scale(1);
                opacity: 0.25;
            }
        }


        @keyframes drawX {
            to {
                stroke-dashoffset: 0;
            }
        }

        @keyframes circleShake {

            0%,
            100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(2px);
            }

            75% {
                transform: translateX(-2px);
            }
        }

        svg circle {
            animation: circlePulse 1.5s ease-in-out infinite;
        }

        svg circle {
            animation: circleShake 0.4s ease-in-out 0.2s;
        }
    </style>
</head>

<body class="bg-gradient-to-br from-gray-100 to-blue-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <h1 class="text-2xl font-bold text-gray-800">Asistencia</h1>
            </div>

            <div class="flex items-center gap-4">
                <a href="/logout">
                    <button type="submit"
                        class="flex items-center gap-2 bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                        </svg>
                        Cerrar Sesión
                    </button>
                </a>
            </div>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="container mx-auto px-4 mt-8">
        <div class="max-w-4xl mx-auto">
            <!-- Sección de bienvenida -->
            <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 transition-all duration-300 hover:shadow-xl">
                <div class="flex items-center gap-4">
                    <div class="bg-blue-100 p-3 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-blue-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800">Bienvenido, <span class="text-blue-600">
                                <%= username %>
                            </span></h2>
                    </div>
                </div>
            </div>

            <!-- Instrucción y flecha -->
            <div class="text-center animate-pulse">
                <p class="text-xl text-gray-700 font-medium mb-4">
                    Para confirmar tu asistencia, pulsa el botón
                </p>
                <div class="flex justify-center">
                    <svg class="h-12 w-12 text-blue-500 animate-bounce" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 13l-7 7-7-7m14-8l-7 7-7-7" />
                    </svg>
                </div>
            </div>

            <!-- Botón de Confirmación -->
            <div class="group text-center mt-4">
                <a href="/visitante/asistencia/<%= id_usuario %>"
                    class="inline-block relative cursor-pointer transition-all duration-300 transform hover:scale-105">
                    <div
                        class="absolute -inset-1 bg-gradient-to-r from-blue-400 to-purple-400 rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-1000">
                    </div>
                    <button
                        class="relative bg-white rounded-2xl shadow-xl px-12 py-6 transition-all duration-300 hover:shadow-2xl w-full">
                        <div class="flex flex-col items-center gap-4">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                class="h-20 w-20 text-blue-600 transform transition duration-300 group-hover:scale-110"
                                fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                            <span class="text-2xl font-bold text-gray-800">Confirmar Asistencia</span>
                        </div>
                    </button>
                </a>
            </div>
        </div>
    </main>
    <!-- Mensajes de estado -->
    <% if (error) { %>
        <div
            class="fixed bottom-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg flex items-center space-x-2 message-alert">
            <svg class="text-red-500 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg" style="transition: all 0.3s ease-in-out;">
                <!-- Círculo de fondo -->
                <circle cx="12" cy="12" r="10" stroke-width="2" stroke="currentColor" fill="none" class="opacity-25" />

                <!-- Cruz animada -->
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"
                    class="transition-all duration-300"
                    style="stroke-dasharray: 34; stroke-dashoffset: 34; animation: drawX 0.4s ease-out forwards 0.2s" />
            </svg>
            <span>
                <%= error %>
            </span>
        </div>
        <% } %>

            <% if (info) { %>
                <div
                    class="fixed bottom-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg flex items-center space-x-2 message-alert">
                    <svg class="text-green-500 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        style="transform: rotate(0deg); transition: all 0.3s ease-in-out;">
                        <!-- Círculo de fondo -->
                        <circle cx="12" cy="12" r="10" stroke-width="2" stroke="currentColor" fill="none"
                            class="opacity-25" />

                        <!-- Checkmark animado -->
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"
                            class="transition-all duration-300"
                            style="stroke-dasharray: 24; stroke-dashoffset: 24; animation: drawCheck 0.5s ease-out forwards 0.2s" />
                    </svg>
                    <span>
                        <%= info %>
                    </span>
                </div>
                <% } %>

                    <script>
                        document.addEventListener('DOMContentLoaded', () => {
                            // Animación de entrada
                            const messages = document.querySelectorAll('.message-alert');
                            messages.forEach(message => {
                                // Agregar animación de entrada
                                message.style.transform = 'translateX(120%)';
                                message.style.opacity = '0';

                                // Trigger reflow
                                void message.offsetWidth;

                                message.style.transition = 'all 0.3s ease-out';
                                message.style.transform = 'translateX(0)';
                                message.style.opacity = '1';

                                // Configurar temporizador para desaparecer
                                setTimeout(() => {
                                    message.style.transform = 'translateX(120%)';
                                    message.style.opacity = '0';

                                    // Eliminar elemento después de la animación
                                    setTimeout(() => {
                                        message.remove();
                                    }, 300);
                                }, 2500); // 5 segundos
                            });
                        });
                    </script>


</body>

</html>